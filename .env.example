# ChatMinds Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
# Get your API key from: https://platform.openai.com/api-keys

# =============================================================================
# Flask Web Application Configuration
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your_super_secret_key_change_this
# Generate a secret key: python -c "import secrets; print(secrets.token_hex(32))"

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///app/askai.db
# For production, consider PostgreSQL: postgresql://user:password@localhost/chatminds

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=ChatMinds
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered chat application with document processing

# =============================================================================
# Domain and URL Configuration
# =============================================================================
DOMAIN=your-domain.com
# Your domain name (without http/https)

# =============================================================================
# Security Settings
# =============================================================================
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=true

# =============================================================================
# Service URLs (Internal Docker Network)
# =============================================================================
LLM_SERVICE_URL=http://chatminds-llm:8000
WEB_SERVICE_URL=http://chatminds-web:5000

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_CONTENT_LENGTH=104857600
# 100MB in bytes (100 * 1024 * 1024)
UPLOAD_FOLDER=/app/data/uploads
ALLOWED_EXTENSIONS=pdf,txt,doc,docx,md

# =============================================================================
# LLM Service Configuration
# =============================================================================
LLM_MODEL=gpt-3.5-turbo
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=60

# =============================================================================
# Document Processing
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCS_PER_CHAT=10

# =============================================================================
# Redis (Optional - for session management and caching)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# SESSION_TYPE=redis

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@gmail.com

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/app/logs/chatminds.log
LOG_MAX_BYTES=10485760
# 10MB in bytes
LOG_BACKUP_COUNT=5

# =============================================================================
# Rate Limiting
# =============================================================================
RATELIMIT_STORAGE_URL=memory://
# For production with Redis: redis://localhost:6379/1
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_ENABLED=true

# =============================================================================
# Monitoring and Health Checks
# =============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
# METRICS_USERNAME=admin
# METRICS_PASSWORD=secure_password

# =============================================================================
# Development Settings (Only for development)
# =============================================================================
# DEV_MODE=false
# FLASK_RELOAD=false
# DEBUG_TOOLBAR=false

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
# Daily at 2 AM (cron format)

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/certificate.crt
SSL_KEY_PATH=/etc/nginx/ssl/private.key
SSL_PROTOCOLS=TLSv1.2 TLSv1.3

# =============================================================================
# Docker Compose Override
# =============================================================================
COMPOSE_PROJECT_NAME=chatminds
COMPOSE_FILE=docker-compose.yml
# For development: docker-compose.yml:docker-compose.dev.yml